    />

    <!-- 10. Montserrat -->
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <title>{`${title} | LVRP`}</title>
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --big-stone: #152b43;
    --husk: #b5964f;
    --sycamore: #8d743c;
    --pesto: #84743c;
    --white: #ffffff;
    --black: #2b2b2b;
    --dark-gray: #333333;
    --light-gray: #f2f2f2;

    /* 
  --big-stone: rgb(21, 43, 67)
  --husk: rgb(181, 150, 79)
  --sycamore: rgb(141, 116, 60)
  --pesto: rgb(132, 116, 60)
  --white: rgb(255, 255, 255)
  --black: rgb(43, 43, 43)
  --dark-gray: rgb(51, 51, 51)
  --light-gray: rgb(242, 242, 242) 
  */
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    /* 1. Roboto */
    font-family: "Roboto", sans-serif;
    /* font-family: "Trykker", serif; */

    /* 2. Open Sans */
    /* font-family: "Open Sans", sans-serif; */

    /* 3. Lora */
    /* font-family: "Lora", serif; */

    /* 4. Merriweather */
    /* font-family: "Merriweather", serif; */

    /* 5. Poppins */
    /* font-family: "Poppins", sans-serif; */

    /* 6. Source Sans Pro */
    /* font-family: "Source Sans Pro", sans-serif; */

    /* 7. Playfair Display */
    /* font-family: "Playfair Display", serif; */

    /* 8. Work Sans */
    /* font-family: "Work Sans", sans-serif; */

    /* 9. Nunito */
    /* font-family: "Nunito", sans-serif; */

    /* 10. Montserrat */
    /* font-family: "Montserrat", sans-serif; */
    color: #0d0d0d;
  }

  a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .line-bar {
    width: 65%;
    margin: 1rem auto;
    border-top: 2px solid var(--black);
    border-radius: 15px;
  }

  .container {
    max-width: 1275px;
    padding: 4rem;
    margin: 0 auto;
  }

  .card {
    padding: 2rem;
    width: 500px;
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.2),
      0 2px 4px rgba(0, 0, 0, 0.2);
    border-radius: 10px;
  }

  .btn {
    padding: 0.6rem 1.5rem;
    font-size: 1.05rem;
    border-radius: 7px;
    border: none;
  }

  .btn:hover {
    cursor: pointer;
  }

  .bg-big-stone {
    background: var(--big-stone);
  }
  .bg-husk {
    background: var(--husk);
  }
  .bg-sycamore {
    background: var(--sycamore);
  }
  .bg-pesto {
    background: var(--pesto);
  }
  .bg-light-gray {
    background: var(--light-gray);
  }

  .btn-big-stone {
    background: var(--big-stone);
    color: var(--white);
  }
  .btn-sycamore {
    background: var(--sycamore);
    color: var(--white);
  }
  .btn-pesto {
    background: var(--pesto);
    color: var(--white);
  }
  .btn-husk {
    background: var(--husk);
    color: var(--dark-gray);
  }
  .inverse-big-stone {
    border: var(--big-stone) 3px solid;
    color: var(--big-stone);
  }
  .inverse-sycamore {
    border: var(--sycamore) 3px solid;
    color: var(--sycamore);
  }
  .inverse-white {
    border: white 3px solid;
    color: white;
  }
  .inverse-pesto {
    border: var(--pesto) 3px solid;
    color: var(--pesto);
  }
  .inverse-husk {
    border: var(--husk) 3px solid;
    color: var(--husk);
  }

  .button:hover {
    cursor: pointer;
  }

  .sticky {
    opacity: 1;
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: 9999;
  }

  .opacity-background {
    background: rgba(43, 43, 43, 0) !important;
    padding: 2rem 4rem !important;
  }

  .bigger-image {
    width: 250px !important;
  }
  .bigger-font {
    font-size: 1.25rem !important;
  }

  .hide-menu {
    opacity: 0;
    position: fixed;
  }
  .inView {
    transform: translate(0, 0);
    transition: all 0.3 ease;
  }
  @media only screen and (max-width: 768px) {
    .container {
      padding: 2rem 1rem;
    }
  }
  @media only screen and (max-width: 992px) {
    .container {
      padding: 4rem 2rem;
    }
  }
  /* 
  @media only screen and (max-width: 768px) {
  }
  @media only screen and (max-width: 992px) {
  }
  @media only screen and (max-width: 1200px) {
  } */
</style>
