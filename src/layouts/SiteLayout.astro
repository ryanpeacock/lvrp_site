---
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
  description?: string;
}

const { title, description = "community of music producers" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script
      src="https://kit.fontawesome.com/27a18b8c60.js"
      crossorigin="anonymous"></script>
    <meta name="generator" content={Astro.generator} />
    <title>{`${title} | LVRP`}</title>
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var mainNav = document.querySelector(".nav-menu");
    var scrollNav = document.querySelector(".nav-menu-scroll");
    var header = document.querySelector("#hero-section");
    var headerHeight = header.scrollHeight;

    window.addEventListener("scroll", function () {
      if (window.scrollY > headerHeight) {
        mainNav.classList.add("hide-menu");
        scrollNav.classList.add("sticky");
        scrollNav.classList.remove("hide-menu");
      } else {
        mainNav.classList.remove("hide-menu");
        scrollNav.classList.remove("sticky");
        scrollNav.classList.add("hide-menu");
      }
    });
  });
</script>

<style is:global>
  :root {
    --big-stone: #152b43;
    --husk: #b5964f;
    --sycamore: #8d743c;
    --pesto: #84743c;
    --white: #ffffff;
    --black: #2b2b2b;
    --dark-gray: #333333;
    --light-gray: #f2f2f2;

    /* 
  --big-stone: rgb(21, 43, 67)
  --husk: rgb(181, 150, 79)
  --sycamore: rgb(141, 116, 60)
  --pesto: rgb(132, 116, 60)
  --white: rgb(255, 255, 255)
  --black: rgb(43, 43, 43)
  --dark-gray: rgb(51, 51, 51)
  --light-gray: rgb(242, 242, 242) 
  */
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Roboto", sans-serif;
    color: #0d0d0d;
  }

  a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .line-bar {
    width: 65%;
    margin: 1rem auto;
    border-top: 2px solid var(--black);
    border-radius: 15px;
  }

  .container {
    max-width: 1275px;
    padding: 4rem;
    margin: 0 auto;
  }

  .card {
    padding: 2rem;
    width: 500px;
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.2),
      0 2px 4px rgba(0, 0, 0, 0.2);
    border-radius: 10px;
  }

  .btn {
    padding: 0.6rem 1.5rem;
    font-size: 1.05rem;
    border-radius: 7px;
    border: none;
  }

  .btn:hover {
    cursor: pointer;
  }

  .bg-big-stone {
    background: var(--big-stone);
  }
  .bg-husk {
    background: var(--husk);
  }
  .bg-sycamore {
    background: var(--sycamore);
  }
  .bg-pesto {
    background: var(--pesto);
  }
  .bg-light-gray {
    background: var(--light-gray);
  }

  .btn-big-stone {
    background: var(--big-stone);
    color: var(--white);
  }
  .btn-sycamore {
    background: var(--sycamore);
    color: var(--white);
  }
  .btn-pesto {
    background: var(--pesto);
    color: var(--white);
  }
  .btn-husk {
    background: var(--husk);
    color: var(--dark-gray);
  }
  .inverse-big-stone {
    border: var(--big-stone) 3px solid;
    color: var(--big-stone);
  }
  .inverse-sycamore {
    border: var(--sycamore) 3px solid;
    color: var(--sycamore);
  }
  .inverse-white {
    border: white 3px solid;
    color: white;
  }
  .inverse-pesto {
    border: var(--pesto) 3px solid;
    color: var(--pesto);
  }
  .inverse-husk {
    border: var(--husk) 3px solid;
    color: var(--husk);
  }

  .button:hover {
    cursor: pointer;
  }

  .sticky {
    opacity: 1;
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: 9999;
  }

  .hide-menu {
    opacity: 0;
    position: fixed;
  }
  .inView {
    transform: translate(0, 0);
    transition: all 0.3 ease;
  }
  @media only screen and (max-width: 768px) {
    .container {
      padding: 2rem 1rem;
    }
  }
  @media only screen and (max-width: 992px) {
    .container {
      padding: 4rem 2rem;
    }
  }
</style>
