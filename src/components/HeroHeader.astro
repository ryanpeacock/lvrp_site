---
import Header from "../components/Header.astro";
---

<section id="hero-section">
  <Header transparent sticky />
  <div class="outside-container">
    <div class="overlay">
      <div class="bottom-container">
        <div class="hero-text">
          <p>
            <span>"</span>For there are three that bear record in heaven, the
            Father, the Word, and the Holy Ghost: and these three are one.
            <span>"</span>
          </p>
          <p>- 1 John 5:7</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  #hero-section .outside-container {
    background: url("/images/churchgrouppic.jpg") no-repeat center center /
      cover;
    height: 100vh;
    max-height: 695px;
  }

  #hero-section .outside-container .overlay {
    background: rgb(26, 62, 106);
    background: linear-gradient(
      161deg,
      rgba(26, 62, 106, 0.85) 30%,
      rgba(0, 0, 0, 0.85) 64%
    );
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  /* Nav-Menu Index Top */
  .nav-menu {
    padding: 2rem 4rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-menu img {
    width: 300px;
  }

  .nav-menu .menu-items ul {
    list-style: none;
    display: flex;
    font-size: 1.25rem;
  }
  .nav-menu .menu-items li {
    margin: 0 1rem;
    color: white;
    transition: color 0.5s ease-in-out;
  }
  .nav-menu .menu-items li:hover {
    cursor: pointer;
    color: var(--husk);
  }

  #hero-section .outside-container .overlay .bottom-container {
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: flex-start;
  }
  #hero-section .outside-container .overlay .hero-text {
    margin-top: 15rem;
    width: 50%;
  }
  #hero-section .outside-container .overlay .hero-text p {
    text-align: center;
    font-size: 2rem;
    color: white;
    font-family: "Alegreya", serif;
  }

  @media only screen and (max-width: 768px) {
    .container {
      padding: 2rem 1rem;
    }
    .nav-menu {
      padding: 2rem;
      flex-wrap: no-wrap;
      flex-direction: column-reverse;
    }
    .nav-menu .menu-items {
      display: none;
    }
  }
  @media only screen and (max-width: 992px) {
    .container {
      padding: 4rem 2rem;
    }
    .nav-menu .menu-items ul {
      flex-wrap: wrap;
    }
    #hero-section .outside-container .overlay .hero-text {
      width: 85%;
      font-size: 1.5rem;
    }
  }
  @media only screen and (max-width: 1200px) {
    .nav-menu {
      flex-wrap: wrap;
    }
  }
</style>
