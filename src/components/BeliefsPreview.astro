---
import { infoCards } from "../data/siteData";
import LearnMoreCard from "./LearnMoreCard.astro";
---

<section id="beliefs" class="bg-light-gray">
  <div class="container">
    <h2 class="text-4xl font-bold text-center mb-12 text-gray-800">
      Our Beliefs
    </h2>
    <div class="list">
      {
        infoCards.map((card) => {
          return <LearnMoreCard data={card} />;
        })
      }
    </div>
  </div>
</section>

<style>
  #beliefs .container {
    padding-top: 1rem;
  }

  #beliefs .container .list {
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }
  @media only screen and (max-width: 768px) {
    #beliefs .container .list {
      flex-direction: column;
      align-items: center;
    }
  }
  @media only screen and (max-width: 992px) {
  }
  @media only screen and (max-width: 1200px) {
  }
</style>
