---
import { scheduleDates } from "../data/siteData";
---

<section id="communion-section">
  <div class="overlay">
    <div class="container">
      <h2>2025 Communion Season Schedule</h2>
      <p class="communion-summary">
        We practice session-controlled communion, inviting those outside our
        congregation to partake following an interview with the elders. Eligible
        participants must be members in good standing of the RPCNA, a NAPARC
        church, or another faithful Reformed church, with a credible profession
        of faith and baptism. Our quarterly communion seasons include a
        preparatory service on Saturday and the Lordâ€™s Supper on Sunday,
        celebrated at a table with a shared loaf and common cup.
      </p>
      <a href="/about" class="btn btn-sycamore">Learn More</a>
      <div class="date-list">
        {
          scheduleDates.map((date, index) => {
            return (
              <div class="date">
                <div class="qtr-box">
                  <span>Quarter {index + 1}</span>
                </div>
                <h3>{date.month}</h3>
                <p>{date.date}</p>
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</section>

<style>
  #communion-section {
    background: url("/images/lvrp-pic-2.jpg") no-repeat center center / cover;
  }

  #communion-section .overlay {
    background: rgb(26, 62, 106);
    background: linear-gradient(
      161deg,
      rgba(26, 62, 106, 0.85) 30%,
      rgba(0, 0, 0, 0.85) 64%
    );
    width: 100%;
    height: 100%;
  }

  #communion-section .overlay .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  #communion-section .overlay .container h2 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  #communion-section .overlay .container .communion-summary {
    width: 65%;
    margin-bottom: 1rem;
    color: lightgray;
    line-height: 1.75;
    font-size: 1.05rem;
  }
  #communion-section .overlay .container a {
    margin-bottom: 3rem;
  }

  #communion-section .overlay .container .date-list {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  #communion-section .overlay .container .date-list .date {
    width: 150px;
    border: white 1px solid;
    padding: 1rem;
    margin: 1rem;
    color: white;
    border-radius: 5px;
    transition: transform 0.3s ease-in-out;
    background: rgba(26, 62, 106, 0.5);
  }
  #communion-section .overlay .container .date-list .date:hover {
    cursor: pointer;
    transform: scale(1.02);
  }

  #communion-section .overlay .container .date-list .date .qtr-box {
    padding: 0.25rem 1rem;
    background: var(--sycamore);
    border: 1px solid white;
    border-radius: 10px;
    margin-top: -30px;
    margin-bottom: 1rem;
  }

  #communion-section .overlay .container .date-list .date h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  #communion-section .overlay .container .date-list .date p {
    font-size: 1.25rem;
  }

  @media only screen and (max-width: 768px) {
    #communion-section .overlay .container {
      padding: 2rem 1rem;
    }

    #communion-section .overlay .container .communion-summary {
      width: 90%;
    }

    #communion-section .overlay .container .date-list {
      flex-direction: column;
      width: 100%;
    }

    #communion-section .overlay .container .date-list .date {
      width: 75%;
      margin: 1.5rem 0;
      padding: 2rem 1rem;
    }

    #communion-section .overlay .container .date-list .date .qtr-box {
      padding: 0.25rem 0.5rem;
      width: 50%;
      margin: -50px auto 1rem auto;
    }
  }
  @media only screen and (max-width: 992px) {
  }
  @media only screen and (max-width: 1200px) {
  }
</style>
