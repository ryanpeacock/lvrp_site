---
import { pageImageMap } from "../data/siteData";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section
  class="page-hero"
  style={{
    background: `url("/images/${pageImageMap[title]}") no-repeat center center / cover;`,
  }}
>
  <div class="overlay">
    <h2>{title}</h2>
  </div>
</section>

<style>
  .page-hero .overlay {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 12rem 2rem 8rem 2rem;
    background: rgba(26, 62, 106, 0.65);
    background: linear-gradient(
      161deg,
      rgba(26, 62, 106, 0.65) 30%,
      rgba(0, 0, 0, 0.65) 64%
    );
    font-size: 1.5rem;
    color: white;
    width: 100%;
    height: 100%;
    text-align: center;
  }

  .page-hero .overlay h2 {
    font-size: 3rem;
    font-weight: 600;
  }
</style>
