---
interface Props {
  title: string;
}

const { title } = Astro.props;

const pageImageMap = {
  About: "lvrp-pic-1.jpg",
  Beliefs: "lvrp-pic-2.jpg",
  Contact: "lvrp-pic-3.jpg",
  Leadership: "lvrp-pic-4.jpg",
  Sermons: "lvrp-pic-1.jpg",
};
---

<section
  class="page-hero about-hero"
  style={{
    background: `url("/images/${pageImageMap[title]}") no-repeat center center / cover;`,
  }}
>
  <div class="overlay">
    <h2>{title}</h2>
  </div>
</section>

<style>
  .page-hero .overlay {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 12rem 2rem 8rem 2rem;
    background: rgba(26, 62, 106, 0.9);
    background: linear-gradient(
      161deg,
      rgba(26, 62, 106, 0.9) 30%,
      rgba(0, 0, 0, 0.9) 64%
    );
    font-size: 1.5rem;
    color: white;
    width: 100%;
    height: 100%;
  }
</style>
