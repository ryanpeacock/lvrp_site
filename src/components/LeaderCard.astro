---
interface Props {
  data: {
    image: string;
    bio: string;
    name: string;
    office: string;
  };
}

const { data } = Astro.props;
---

<div class="leader-card">
  <div class="top">
    <div class="overlay">
      <p>
        {data?.bio}
      </p>
    </div>
    <img src={data?.image} alt="" />
  </div>
  <div class="bottom">
    <h3>{data?.name}</h3>
    <span class="title"> {data?.office}</span>
  </div>
</div>

<style>
  .leader-card {
    width: 30%;
    border-radius: 15px;
    overflow: hidden;
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.2),
      0 2px 4px rgba(0, 0, 0, 0.2);
    transition: transform 0.5s ease-in-out;
  }
  .leader-card:hover {
    transform: scale(1.05);
  }

  .leader-card:hover {
    cursor: pointer;
  }

  .leader-card .top {
    position: relative;
  }

  .leader-card .top .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(26, 62, 106);
    background: linear-gradient(
      161deg,
      rgba(26, 62, 106, 0.85) 30%,
      rgba(0, 0, 0, 0.85) 64%
    );
    color: white;
    padding: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 1.7;
    transition: opacity 0.5s ease-in-out;
    opacity: 0;
    font-size: 1.1rem;
    overflow: hidden;
  }

  .leader-card .top .overlay:hover {
    opacity: 0.8;
  }

  .leader-card .top img {
    display: block;
    width: 100%;
    height: 100%;
    margin: 0;
    object-fit: cover;
  }

  .leader-card .bottom {
    padding: 0.5rem 1rem 1rem 1rem;
  }

  .leader-card .bottom h3 {
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
  }

  .leader-card .bottom .title {
    font-size: 1.1rem;
    font-style: italic;
  }

  @media only screen and (max-width: 768px) {
    .leader-card {
      width: 90%;
      margin: 2rem 0;
    }
  }
  @media only screen and (max-width: 992px) {
  }
  @media only screen and (max-width: 1200px) {
  }
</style>
