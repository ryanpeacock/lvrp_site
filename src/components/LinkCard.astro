---
interface Props {
  data: {
    title: string;
    link: string;
    image?: string;
  };
}

const {
  data: {
    title,
    link = "/",
    image = "https://images.unsplash.com/photo-1504052434569-70ad5836ab65?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
} = Astro.props;
---

<a class="sermon-tile" href={link}>
  <div class="overlay">
    <h4>{title}</h4>
  </div>
  <img src={image} alt="" />
</a>

<style>
  .sermon-tile {
    position: relative;
    width: 450px;
    border-radius: 15px;
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.2),
      0 2px 4px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    transition: transform 0.5s ease-in-out;
  }
  .sermon-tile h4 {
    text-align: center;
  }
  .sermon-tile:hover {
    transform: scale(1.02);
  }
  .sermon-tile .overlay {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: 1.25rem;
    color: white;
    background: rgb(26, 62, 106);
    background: linear-gradient(
      161deg,
      rgba(26, 62, 106, 0.6) 30%,
      rgba(0, 0, 0, 0.6) 64%
    );
  }

  .sermon-tile img {
    display: block;
    width: 100%;
    height: 100%;
  }

  @media only screen and (max-width: 768px) {
    .sermon-tile {
      width: 100%;
    }
  }
  @media only screen and (max-width: 992px) {
  }
  @media only screen and (max-width: 1200px) {
  }
</style>
