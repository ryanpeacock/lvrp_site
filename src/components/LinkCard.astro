---
interface Props {
  data: {
    title: string;
    link: string;
    image?: string;
    height?: string;
  };
}

const {
  data: { title, link = "/", image = "/images/default.jpg", height = "" },
} = Astro.props;
---

<a class="sermon-tile" href={link} style={height ? { height } : null}>
  <div class="overlay">
    <h4>{title}</h4>
  </div>
  <img src={image} alt="" />
</a>

<style>
  .sermon-tile {
    position: relative;
    width: 450px;
    border-radius: 15px;
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.2),
      0 2px 4px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    transition: transform 0.5s ease-in-out;
  }
  .sermon-tile h4 {
    text-align: center;
  }
  .sermon-tile:hover {
    transform: scale(1.02);
  }
  .sermon-tile .overlay {
    padding: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: 1.25rem;
    color: white;
    background: rgb(26, 62, 106);
    background: linear-gradient(
      161deg,
      rgba(26, 62, 106, 0.5) 30%,
      rgba(0, 0, 0, 0.5) 64%
    );
  }

  .sermon-tile img {
    display: block;
    width: 100%;
    height: 100%;
  }

  img {
    object-fit: cover;
  }

  @media only screen and (max-width: 768px) {
    .sermon-tile {
      width: 100%;
    }
  }
  @media only screen and (max-width: 992px) {
  }
  @media only screen and (max-width: 1200px) {
  }
</style>
